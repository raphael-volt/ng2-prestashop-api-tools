{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"declaration": false,
		"module": "commonjs",
		"rootDir": "./",
		"baseUrl": "src",
		"sourceMap": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"preserveConstEnums": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2016",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"test/**/*.spec.ts"
	]
}