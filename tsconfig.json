{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"declaration": false,
		"module": "commonjs",
		"baseUrl": ".",
		"sourceMap": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/*"
		],
		"lib": [
			"es2016",
			"dom"
		],
		"types": [
			"commander",
			"node",
			"mustache",
			"mocha",
			"chai",
			"sinon"
		]
	},
	"include": [
		"src/**/*"
	]
}